<%- include("partials/header.ejs") %>
<style>
body {
    background-image: url("<%= backgroundImage %>");
    opacity: 0.8;
    font-family: 'Viga', sans-serif;
    font-size: 1.2rem;
}

body {
      animation: none; 
}

table{
    box-shadow: 1px 1px 6px 1px black;
}
.container{
    width: 60%;
}

tr:hover{
    font-size: large;
}
</style>


<div class="container statistics-table">

<table class="table table-striped table-dark table-hover" >
    <tr>
        <td>Website entries</td>
        <td><%=stats.visits%></td>
    </tr>
    <tr>
        <td>The user who published the most posts</td>
        <td><%=stats.topFan%> (<%=stats.countTopFan%>)</td>
    </tr>
    <tr>
        <td>Amount of Posts</td>
        <td><%=stats.numPosts%></td>
    </tr>
    <tr>
        <td>Registered users</td>
        <td><%=stats.regUsers%></td>
    </tr>
    <tr>
        <td>The highest number of posts published per hour</td>
        <td><%=stats.postPerHour%></td>
    </tr>

</table>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        var title = document.getElementById("title");
        title.innerText = "Statistics";
    });
</script>
<%- include("partials/footer.ejs") %>
